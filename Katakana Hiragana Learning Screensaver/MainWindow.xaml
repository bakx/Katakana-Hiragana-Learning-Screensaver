<Window x:Class="Screensaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Closed="MainWindow_OnClosed"
        mc:Ignorable="d"
        Title="" Height="50" Width="50" ShowInTaskbar="False" WindowStyle="None" ResizeMode="NoResize" Margin="0"
        Padding="0"
        KeyDown="MainWindow_OnKeyDown" MouseMove="MainWindow_OnMouseMove"
        Background="{Binding BackColor}">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Name="StackPanel" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Name="ExtraPanel" />
    </StackPanel>
</Window>